<!-- applicationContext.xml -->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd"> 

                    <!-- Constructor Injection -->

    
    <bean id="battery" class="com.mphasis.shopping1.demo.Battery">
        <constructor-arg value="B001"/>
        <constructor-arg value="Rechargeable Battery"/>
        <constructor-arg value="15.99"/>
        <constructor-arg value="2000"/>
    </bean>

    <bean id="disc" class="com.mphasis.shopping1.demo.Disc">
        <constructor-arg value="D001"/>
        <constructor-arg value="DVD"/>
        <constructor-arg value="5.99"/>
        <constructor-arg value="DVD-R"/>
    </bean>
</beans>